<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c5eefd"
    tools:context="com.example.ozeki.fishing5.FishingActivity">

    <Button
        android:id="@+id/start_fishing_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="231dp"
        android:background="@drawable/shape_rounded_corners_10dp_orange"
        android:text="@string/start_fishing"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/return_button"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/return_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="87dp"
        android:background="@drawable/shape_rounded_corners_10dp"
        android:text="やっぱりやめる"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/result_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="217dp"
        android:layout_marginStart="217dp"
        android:background="@drawable/shape_rouded_corners_10dp_red"
        android:text="結果を見る"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/target_location_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/target_location_backfround"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/target_location_button"
            android:layout_width="65dp"
            android:layout_height="75dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/frameLayout2"
            android:layout_marginStart="114dp"
            android:layout_marginTop="86dp"
            android:background="@null"
            android:scaleType="fitStart"
            android:src="@drawable/location" />

        <ImageView
            android:id="@+id/turizao"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY" />

    </FrameLayout>

</android.support.constraint.ConstraintLayout>
